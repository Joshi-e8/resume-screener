{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": [
      "warn", 
      { "argsIgnorePattern": "^_" }  // Ignore unused vars with _
    ],
    "@typescript-eslint/no-explicit-any": "warn",
    "no-console": "warn",
    "semi": ["error", "always"],
    "quotes": ["error", "double"]
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parserOptions": {
        "project": "./tsconfig.json"
      }
    }
  ]
}