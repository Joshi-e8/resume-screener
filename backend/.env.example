# Environment
ENVIRONMENT=production

# Database Configuration
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net
MONGODB_DB_NAME=resume_screener

# Server Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_URL=https://your-app.railway.app
CORS_ORIGINS=https://your-frontend-domain.com,http://localhost:3000

# Security Configuration
SECRET_KEY=your-super-secret-key-here-make-it-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
API_V1_STR=/api/v1
API_RATE_LIMIT=100

# Social Authentication
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Google Drive Integration (Optional - will use main Google credentials if not set)
GOOGLE_DRIVE_CLIENT_ID=your-google-drive-client-id
GOOGLE_DRIVE_CLIENT_SECRET=your-google-drive-client-secret
GOOGLE_DRIVE_REDIRECT_URI=http://localhost:8000/api/v1/google-drive/callback

# AI Services
GROQ_API_KEY=your-groq-api-key
OPENAI_API_KEY=your-openai-api-key

# AI Scoring
PROVIDER=openai
OPENAI_BASE_URL=https://ai.nuox.io/v1
OPENAI_MODEL=gpt-4
GROQ_MODEL=llama-3.1-70b-versatile
ENABLE_SCORING=1
SCORING_TEMPERATURE=0.2
SCORING_MAX_TOKENS=1200
CACHE_TTL_SECONDS=300


# Vector DB (Qdrant)
# Set these to use Qdrant Cloud instead of embedded
QDRANT_URL=https://YOUR-CLUSTER-ID.YOUR-REGION.aws.cloud.qdrant.io:6333
QDRANT_API_KEY=your-qdrant-api-key
# Optional overrides
QDRANT_COLLECTION=resume_chunks
EMBEDDING_DIM=1536

# Redis Configuration
REDIS_URL=redis://default:password@host:port
CACHE_EXPIRE_SECONDS=3600
OTP_EXPIRE=300

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=.pdf,.doc,.docx,.txt

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@resumescreener.com

# Development Settings
DEBUG=false
LOG_LEVEL=INFO

# Job Board Settings
DEFAULT_JOB_EXPIRY_DAYS=30
MAX_JOBS_PER_USER=50
MAX_CANDIDATES_PER_USER=1000

# Analytics
ANALYTICS_RETENTION_DAYS=365
ENABLE_ANALYTICS=true

# Security
ENABLE_CORS=true
ENABLE_RATE_LIMITING=true
ENABLE_HTTPS_REDIRECT=true